<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title><%= brandTitle %></title>
  <link rel="stylesheet" href="/static/styles.css"/>
  <% if (brandPrimary) { %><style>:root{ --primary:<%= brandPrimary %>; }</style><% } %>
  <script defer src="/static/app.js"></script>
</head>
<body>
  <div class="topbar">
    <div class="topbar-inner">
      <div class="topbar-title">
        <% if (brandLogo) { %><img src="<%= brandLogo %>" alt="logo"/><% } %>
        <span><%= brandTitle %></span>
      </div>
      <div>
        <a href="/logout"><button class="btn btn-signout small-compact">Sign Out</button></a>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="card" style="max-width: 1100px;">
      <div class="search-right" style="margin:6px 0;">
        <input id="search" class="small-compact" type="text" placeholder="Search by name or commentsâ€¦" style="padding:6px 8px;border:1px solid #d1d5db;border-radius:8px;min-width:260px">
      </div>

      <div class="controls-row">
        <div class="controls-left">
          <button id="btnBulkDelete" class="btn btn-danger" disabled onclick="bulkDelete()">Remove Selected</button>
        </div>
        <div class="controls-right">
          <a href="/upload"><button class="btn btn-blue">File Upload</button></a>
        </div>
      </div>

      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th style="width: 80px;">Select</th>
              <th>File</th>
              <th>Size</th>
              <th style="text-align:center;">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for (const f of files) { 
               const full = f.original_name;
               const short = full.length > 25 ? (full.slice(0,25) + '<span class="ellipsis" title="'+full+'">â€¦</span>') : full;
               const hasC = !!(f.comments && f.comments.trim().length);
            %>
              <tr data-name="<%= f.original_name.toLowerCase() %>" data-comments="<%= (f.comments||'').toLowerCase() %>">
                <td><input type="checkbox" value="<%= f.id %>"/></td>
                <td>
                  <div class="filecell">
                    <div class="filemain">
                      <%= hasC ? '<span title="'+(f.comments||'').replace(/"/g,'&quot;')+'">ðŸ“œ</span>' : '' %>
                      <div class="filename"><span title="<%= f.original_name %>"><%- short %></span></div>
                    </div>
                  </div>
                  <div class="date-small"><%= new Date(f.uploaded_at).toLocaleString() %></div>
                </td>
                <td><%= (Math.round(f.size/1024)) %> KB</td>
                <td style="text-align:center;">
                  <button class="btn btn-primary btn-getlink" data-id="<%= f.id %>">GetLink</button>
                  <button class="btn btn-danger btn-delete" data-id="<%= f.id %>">Delete</button>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="footer"><b><%= footerText %></b></div>
    </div>
  </div>
</body>
</html>
