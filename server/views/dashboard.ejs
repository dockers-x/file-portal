<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title><%= brandTitle %></title>
  <link rel="stylesheet" href="/static/styles.css"/>
  <% if (brandPrimary) { %><style>:root{ --primary:<%= brandPrimary %>; }</style><% } %>
  <script defer src="/static/app.js"></script>
</head>
<body>
  <div class="topbar">
    <div class="topbar-inner">
      <div class="topbar-title">
        <% if (brandLogo) { %><img src="<%= brandLogo %>" alt="logo"/><% } %>
        <span><%= brandTitle %></span>
      </div>
      <div>
        <a href="/logout"><button class="btn btn-signout small-compact">Sign Out</button></a>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="card" style="max-width: 1100px;">
      <div class="controls-row" style="margin-top:2px;">
        <div class="controls-left">
          <button id="btnBulkDelete" class="btn btn-danger" disabled>Remove Selected</button>
        </div>
        <div class="controls-right">
          <a href="/upload"><button class="btn btn-blue">File Upload</button></a>
        </div>
      </div>

      <div class="search-right" style="margin:6px 0;">
        <input id="search" class="small-compact" type="text" placeholder="Search name or comments..." style="padding:6px 8px;border:1px solid #d1d5db;border-radius:8px">
        <button class="btn btn-muted small-compact" onclick="clearSearch()">Clear</button>
      </div>

      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th style="width: 80px;">Select</th>
              <th>File Name</th>
              <th>File Size</th>
              <th style="text-align:center;">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for (const f of files) { %>
              <tr data-name="<%= f.original_name.toLowerCase() %>" data-comments="<%= (f.comments||'').toLowerCase() %>" data-fname="<%= f.original_name %>">
                <td><input type="checkbox" value="<%= f.id %>"/></td>
                <td>
                  <% const showName = f.original_name;
                     const long = showName.length > 60;
                     const display = long ? (showName.slice(0,60) + '<span style="color:#2563eb">...</span>') : showName; %>
                  <div class="filename" title="<%= long ? showName : '' %>" style="display:flex;align-items:center;gap:6px;flex-wrap:wrap">
                    <span><%- display %></span>
                    <% if (f.comments) { %><span title="<%= f.comments %>">ðŸ“œ</span><% } %>
                  </div>
                  <div class="small" style="color:#6b7280"><%= new Date(f.uploaded_at).toLocaleString() %></div>
                </td>
                <td><%= (Math.round(f.size/1024)) %> KB</td>
                <td style="text-align:center">
                  <div class="actions">
                    <button class="btn btn-primary" data-action="getlink" data-id="<%= f.id %>">GetLink</button>
                    <button class="btn btn-danger" data-action="delete" data-id="<%= f.id %>">Delete</button>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="footer"><b><%= footerText %></b></div>
    </div>
  </div>
</body>
</html>
