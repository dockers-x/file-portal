<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title><%= brandTitle %></title>
  <link rel="stylesheet" href="/static/styles.css"/>
  <% if (brandPrimary) { %><style>:root{ --primary:<%= brandPrimary %>; }</style><% } %>
  <script defer src="/static/app.js"></script>
</head>
<body>
  <div class="topbar">
    <div class="topbar-inner">
      <div class="topbar-title">
        <% if (brandLogo) { %><img src="<%= brandLogo %>" alt="logo"/><% } %>
        <span>File Management</span>
      </div>
      <div>
        <a href="/logout"><button class="btn btn-signout small-compact">Sign Out</button></a>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="card" style="max-width: 1100px;">
      <div class="search-right" style="margin:6px 0;">
        <input id="search" class="small-compact" type="text" placeholder="Search name or comments..." style="padding:6px 8px;border:1px solid #d1d5db;border-radius:8px">
        <button class="btn btn-muted small-compact" onclick="clearSearch()">Search</button>
      </div>

      <div class="controls-row">
        <div class="controls-left">
          <button id="btnBulkDelete" class="btn btn-danger" disabled onclick="bulkDelete()">Remove Selected</button>
        </div>
        <div class="controls-right">
          <a href="/upload"><button class="btn btn-blue">File Upload</button></a>
        </div>
      </div>

      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th style="width: 80px;">Select</th>
              <th>File Name</th>
              <th>File Size</th>
              <th style="text-align:center;">Action</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% for (const f of files) {
              const short = f.original_name.length > 10 ? (f.original_name.slice(0,10) + 'â€¦') : f.original_name;
            %>
              <tr data-name="<%= f.original_name.toLowerCase() %>" data-search="<%= (f.original_name + ' ' + (f.comments||'')).toLowerCase() %>">
                <td><input type="checkbox" value="<%= f.id %>"/></td>
                <td>
                  <div class="name-cell">
                    <div class="filename" title="<%= f.original_name %>">
                      <span class="filename-clip"><%= short %></span><span class="filename-ellipsis">â€¦</span>
                    </div>
                    <% if (f.comments) { %>
                      <span class="comment-icon" data-tip="<%= f.comments %>">ðŸ“œ</span>
                    <% } %>
                  </div>
                </td>
                <td><%= (Math.round(f.size/1024)) %> KB</td>
                <td>
                  <div class="actions">
                    <button class="btn btn-primary" onclick="getLink(<%= f.id %>)">GetLink</button>
                    <button class="btn btn-danger" onclick="deleteOne(<%= f.id %>, '<%- f.original_name.replace(/"/g,'\"') %>')">Delete</button>
                  </div>
                </td>
                <td><%= new Date(f.uploaded_at).toLocaleString() %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="footer"><b><%= footerText %></b></div>
    </div>
  </div>
</body>
</html>
