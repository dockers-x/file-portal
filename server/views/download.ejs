<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>Download â€¢ <%= brandTitle %></title>
  <link rel="icon" href="/static/favicon.svg" type="image/svg+xml"/>
  <link rel="stylesheet" href="/static/styles.css"/>
  <% if (brandPrimary) { %><style>:root{ --primary:<%= brandPrimary %>; }</style><% } %>
</head>
<body>
  <div class="container">
    <div class="card" style="max-width: 520px; text-align:center;">
      <h2 style="margin-top:0">File Ready</h2>
      <div class="panel">
        <div style="margin-bottom:10px"><strong><%= fileName %></strong></div>
        <div style="display:flex; gap:10px; justify-content:center; flex-wrap:wrap;">
          <a class="btn btn-primary" href="/dl/<%= token %>">Download</a>
          <button class="btn btn-muted" onclick="copyDirect()">Copy Link</button>
        </div>
        <div style="margin-top:10px">
          <button class="btn btn-primary" onclick="location.href='/dashboard'">Done</button>
        </div>
        <div class="small" style="margin-top:10px">
          CLI: <code id="wget">wget -O "<%= fileName %>" <span id="u"></span></code>
          <button class="btn btn-muted small" onclick="copyWget()">copy</button>
        </div>
      </div>
      <div class="footer"><b><%= footerText %></b></div>
    </div>
  </div>
<script>
function toast(msg, type='info', ms=3200){
  let wrap = document.querySelector('.toast-wrap');
  if(!wrap){ wrap=document.createElement('div'); wrap.className='toast-wrap'; document.body.appendChild(wrap); }
  const t=document.createElement('div'); t.className='toast '+(type==='ok'?'ok':type==='err'?'err':'info'); t.textContent=msg;
  wrap.appendChild(t);
  setTimeout(()=>{ t.style.opacity='0'; t.style.transform='translateY(-4px)'; }, Math.max(2600, ms-600));
  setTimeout(()=>{ try{ wrap.removeChild(t); }catch{} }, ms);
}
const url = location.origin + "/dl/<%= token %>";
document.getElementById('u').innerText = url;
function copyDirect(){ navigator.clipboard.writeText(url).then(()=>toast('Download Link Copied for ' + <%- JSON.stringify(fileName) %>, 'ok')); }
function copyWget(){ const t = 'wget -O "' + <%- JSON.stringify(fileName) %> + '" ' + url; navigator.clipboard.writeText(t).then(()=>toast('Copied wget for ' + <%- JSON.stringify(fileName) %>, 'ok')); }
</script>
</body>
</html>
